      "Bash(npx lefthook install)",
      "Bash(npx textlint:*)",
      "Bash(npx tsc --noEmit)",
      "Bash(npx tsc:*)",
      "Bash(npx tsx:*)",
      "Bash(paste:*)",
      "Bash(plutil:*)",
      "Bash(ps:*)",
      "Bash(sips:*)",
      "Bash(sort:*)",
      "Bash(tail:*)",
