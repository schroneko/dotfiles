      "WebFetch(domain:www.humanlayer.dev)",
      "WebFetch(domain:www.npmjs.com)",
      "WebFetch(domain:x.ai)",
      "WebFetch(domain:zenn.dev)"
    ],
    "deny": ["NotebookEdit", "NotebookRead"],
    "ask": []
  },
  "model": "opus",
  "enableAllProjectMcpServers": true,
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); printf '\\033[34m%s\\033[0m' \"$(basename \"$(echo \"$input\" | jq -r '.workspace.current_dir')\")\"'"
  },
  "enabledPlugins": {
    "frontend-design@claude-code-plugins": true
  },
  "outputStyle": "Explanatory",
  "alwaysThinkingEnabled": false,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "WebSearch",
        "hooks": [
          {
            "type": "command",
            "command": "echo '⚠️ Web 検索時は必ず「2025」を含めること' >&2"
          }
        ]
      }
    ]
  }
}
